<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input
      id="title"
      name="title"
      type="text"
      class="validate"
      required
      value="{{course.title}}"
    />
    <label for="title">Name of course</label>
    <span class="helper-text" data-error="Add name of your course"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      value="{{course.price}}"
      min="50"
    />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Add price"></span>
  </div>

  <div class="input-field">
    <input
      id="img"
      name="img"
      type="text"
      class="validate"
      required
      value="{{course.img}}"
    />
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Add url"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}" />

  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}" />
  <button class="btn red">Delete course</button>
</form>