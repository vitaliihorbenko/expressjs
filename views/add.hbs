<h1>Add Course</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required />
    <label for="title">Name of course</label>
    <span class="helper-text" data-error="Add name of your course"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="50"
    />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Add price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required />
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Add url"></span>
  </div>

  <button class="btn btn-primary">Add course</button>
</form>